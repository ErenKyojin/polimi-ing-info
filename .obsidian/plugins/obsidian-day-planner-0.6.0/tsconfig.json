{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "types": [
      "node",
      "svelte",
      "jest"
    ]
  },
  "exclude": [
    "node_modules/*",
    "obsidian-metadata-utils/*"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
